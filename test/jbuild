(executables
 ((names (copy browser test_decoder))
  (public_names (scid-copy scid-browser scid-test-decoder))
  (modules (browser test_decoder copy))
  (libraries (scid bigarray))))

(executable
 ((name suite)
  (modules (suite))
  (libraries (scid bigarray oUnit))))

